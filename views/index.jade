extends layout

block content
  .container
    .row
      .col-md-12.text-center
        if (!user)
          h1= title
          br
          br
          a(href="/register").btn.btn-primary.btn-lg Join Now
          br
          br
          br
          br
          a(href="/login").btn.btn-default Sign In
        
        if (user)
          p.lead Welcome #{user.username}
          a(href="/api/v1/users") 
            button.btn.btn-default Users
          br
          br
          a(href="/api/v1/users/map") 
            button.btn.btn-default Locations
          br
          br
          a(href="/api/v1/interests") 
            button.btn.btn-default Interests
