extends layout

block content
  h1= title
  p Welcome to #{title}
  if (!user)
    a(href="/login") Login
    br
  if (user)
    p You are currently logged in as #{user.username} 
      a(href="/logout") Logout
    br
    a(href="/api/v1/suggestions") Suggestion near you
    br
    a(href="/api/v1/users") Other users
