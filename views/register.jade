extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        h1 Kompas Introduction
        br
        form(role='form', action="/auth/register",method="post", style='max-width: 300px;')
          .form-group
            input.form-control(type='text', name="first_name", placeholder='First Name')
          .form-group
            input.form-control(type='text', name="last_name", placeholder='Last Name')
          .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
          .form-group.text-center
            button.btn.btn-default(type='submit') Sign Up
          p.lead.text-center Or
          .form-group.text-center
            a(href='/auth/instagram')
              button.btn.btn-default Login with Instagram
        p #{message}